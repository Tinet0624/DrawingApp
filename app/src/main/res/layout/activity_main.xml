<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/purple_200"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <com.example.drawingApp.DrawingAppView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:text="Drawing App"
        android:textColor="#ECE1E1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="#C31010"
        android:onClick="onClickSize"
        android:text="Size" />

    <Button
        android:id="@+id/btnColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="105dp"
        android:onClick="onClickColor"
        android:text="Color" />

    <Button
        android:id="@+id/btnCyan"
        android:layout_width="25dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="193dp"
        android:backgroundTint="#18FFFF"
        android:onClick="onClickCyan"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnBlack"
        android:layout_width="25dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="223dp"
        android:backgroundTint="#000000"
        android:onClick="onClickBlack"
        android:visibility="invisible"
        app:strokeColor="#C87777"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnPurple"
        android:layout_width="25dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="162dp"
        android:backgroundTint="#7C4DFF"
        android:onClick="onClickPurple"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="70dp"
        android:onClick="onClickMinus"
        android:text="-"
        android:textSize="16sp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="28dp"
        android:onClick="onClickPlus"
        android:text="+"
        android:textSize="16sp"
        android:visibility="invisible"
        tools:visibility="visible" />

</RelativeLayout>